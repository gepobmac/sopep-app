{
  "name": "sopep-app",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:client",
    "dev:server": "ts-node-dev --respawn --transpile-only --project tsconfig.server.json server/index.ts",
    "dev:client": "tsc -p tsconfig.client.json --watch",
    "build": "npm-run-all build:server build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "tsc -p tsconfig.client.json"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.4",
    "npm-run-all": "^4.1.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
